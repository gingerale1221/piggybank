<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:fillViewport="true"
    android:scrollbars="vertical"
    android:layout_marginBottom="10sp">

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.3"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.5"
            android:orientation="vertical">

            <Button android:layout_height="0dp"
                    android:layout_width="match_parent"
                    android:layout_weight="0.5"
                    android:id="@+id/incomeBttn"
                    android:text="@string/income"
                    android:onClick="onClick"/>

            <Button android:layout_height="0dp"
                    android:layout_width="match_parent"
                    android:layout_weight="0.5"
                    android:id="@+id/budgetBttn"
                    android:text="@string/budget"
                    android:onClick="onClick"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.5"
            android:orientation="vertical">

            <Button android:layout_height="0dp"
                    android:layout_width="match_parent"
                    android:layout_weight="0.5"
                    android:id="@+id/expensesBttn"
                    android:text="@string/expenses"
                    android:onClick="onClick"/>

            <Button android:layout_height="0dp"
                    android:layout_width="match_parent"
                    android:layout_weight="0.5"
                    android:id="@+id/socialBttn"
                    android:text="@string/social"
                    android:onClick="onClick"/>

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.7"
        android:orientation="vertical"
        android:paddingTop="30sp">


        <TextView
            android:id="@+id/text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Summary for this month"
            android:layout_marginLeft="10sp"
            android:textColor="#F00"/>

            <TableLayout
                android:id="@+id/balance"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="10sp"
                android:layout_marginBottom="10sp"
                android:layout_marginLeft="10sp"
                android:layout_marginRight="10sp"
                android:shrinkColumns="*"
                android:stretchColumns="*"
                android:orientation="vertical" >

                <TableRow
                    android:layout_height="wrap_content"
                    android:layout_width="match_parent"
                    android:gravity="left" >

                    <TextView
                        android:id="@+id/summaryBalance"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="Balance: "
                        android:textSize="20sp"
                        android:textColor="#FFFFFF"
                        android:background="#8080FF"/>
                </TableRow>

            <TableRow
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:gravity="left" >

                <TextView
                    android:id="@+id/summaryIncome"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="Income: "
                    android:textColor="#FFFFFF"
                    android:textSize="20sp"
                    android:background="#8080FF"/>
            </TableRow>

            <TableRow
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:gravity="left" >

                <TextView
                    android:id="@+id/summaryExpenses"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="Expenses: "
                    android:textColor="#FFFFFF"
                    android:textSize="20sp"
                    android:background="#8080FF"/>
            </TableRow>

            <TableRow
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:gravity="left" >

                <TextView
                    android:id="@+id/upcomingPayments"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="Upcoming Payments: "
                    android:textColor="#FFFFFF"
                    android:textSize="20sp"
                    android:background="#8080FF"/>
            </TableRow>

                <TableRow
                    android:layout_height="wrap_content"
                    android:layout_width="match_parent"
                    android:gravity="left" >

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="Text "
                        android:textColor="#FFFFFF"
                        android:textSize="20sp"
                        android:background="#8080FF"/>
                </TableRow>

                <TableRow
                    android:layout_height="wrap_content"
                    android:layout_width="match_parent"
                    android:gravity="left" >

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="Text "
                        android:textColor="#FFFFFF"
                        android:textSize="20sp"
                        android:background="#8080FF"/>
                </TableRow>

                <TableRow
                    android:layout_height="wrap_content"
                    android:layout_width="match_parent"
                    android:gravity="left" >

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="Text "
                        android:textColor="#FFFFFF"
                        android:textSize="20sp"
                        android:background="#8080FF"/>
                </TableRow>

                <TableRow
                    android:layout_height="wrap_content"
                    android:layout_width="match_parent"
                    android:gravity="left" >

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="Text "
                        android:textColor="#FFFFFF"
                        android:textSize="20sp"
                        android:background="#8080FF"/>
                </TableRow>

                <TableRow
                    android:layout_height="wrap_content"
                    android:layout_width="match_parent"
                    android:gravity="left" >

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="Text "
                        android:textColor="#FFFFFF"
                        android:textSize="20sp"
                        android:background="#8080FF"/>
                </TableRow>

                <TableRow
                    android:layout_height="wrap_content"
                    android:layout_width="match_parent"
                    android:gravity="left" >

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="Text "
                        android:textColor="#FFFFFF"
                        android:textSize="20sp"
                        android:background="#8080FF"/>
                </TableRow>

                <TableRow
                    android:layout_height="wrap_content"
                    android:layout_width="match_parent"
                    android:gravity="left" >

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="Text "
                        android:textColor="#FFFFFF"
                        android:textSize="20sp"
                        android:background="#8080FF"/>
                </TableRow>

                <TableRow
                    android:layout_height="wrap_content"
                    android:layout_width="match_parent"
                    android:gravity="left" >

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="Text "
                        android:textColor="#FFFFFF"
                        android:textSize="20sp"
                        android:background="#8080FF"/>
                </TableRow>

                <TableRow
                    android:layout_height="wrap_content"
                    android:layout_width="match_parent"
                    android:gravity="left" >

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="Text "
                        android:textColor="#FFFFFF"
                        android:textSize="20sp"
                        android:background="#8080FF"/>
                </TableRow>

                <TableRow
                    android:layout_height="wrap_content"
                    android:layout_width="match_parent"
                    android:gravity="left" >

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="Text "
                        android:textColor="#FFFFFF"
                        android:textSize="20sp"
                        android:background="#8080FF"/>
                </TableRow>

                <TableRow
                    android:layout_height="wrap_content"
                    android:layout_width="match_parent"
                    android:gravity="left" >

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="Text "
                        android:textColor="#FFFFFF"
                        android:textSize="20sp"
                        android:background="#8080FF"/>
                </TableRow>

                <TableRow
                    android:layout_height="wrap_content"
                    android:layout_width="match_parent"
                    android:gravity="left" >

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="Text "
                        android:textColor="#FFFFFF"
                        android:textSize="20sp"
                        android:background="#8080FF"/>
                </TableRow>

            </TableLayout>

    </LinearLayout>

</LinearLayout>

</ScrollView>

